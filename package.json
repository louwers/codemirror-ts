{
	"name": "@valtown/codemirror-ts",
	"version": "2.3.0",
	"description": "codemirror extensions for typescript",
	"main": "./dist/commonjs/index.js",
	"sideEffects": false,
	"scripts": {
		"prepare": "tsc",
		"dev": "vite",
		"typecheck": "tsc --noEmit",
		"lint": "biome check",
		"test": "vitest run",
		"test:watch": "vitest",
		"build": "vite build"
	},
	"keywords": ["codemirror", "typescript", "ts"],
	"author": "Val Town",
	"license": "ISC",
	"peerDependencies": {
		"@codemirror/autocomplete": "^6",
		"@codemirror/lint": "^6",
		"@codemirror/state": "^6",
		"@codemirror/view": "^6"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@codemirror/lang-javascript": "^6.2.2",
		"@types/node": "^22.10.2",
		"@typescript/vfs": "^1.6.0",
		"@vitest/coverage-v8": "^2.1.8",
		"codemirror": "^6",
		"comlink": "^4.4.2",
		"happy-dom": "^15.11.7",
		"tshy": "^3.0.2",
		"typescript": "^5.7.2",
		"vite": "^6.0.3",
		"vitest": "^2.1.8"
	},
	"files": ["dist", "src"],
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/commonjs/index.d.ts",
				"default": "./dist/commonjs/index.js"
			}
		},
		"./worker": {
			"import": {
				"types": "./dist/esm/worker.d.ts",
				"default": "./dist/esm/worker.js"
			},
			"require": {
				"types": "./dist/commonjs/worker.d.ts",
				"default": "./dist/commonjs/worker.js"
			}
		}
	},
	"types": "./dist/commonjs/index.d.ts",
	"type": "module",
	"engines": {
		"node": "*"
	},
	"module": "./dist/esm/index.js",
	"nx": {}
}
